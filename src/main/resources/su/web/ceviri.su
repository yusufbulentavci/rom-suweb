--@DEPENDS:.base

--@TABLE uzanti=cvr
create table web.ceviri(
	tanim text primary key,
	lang char(2),
	tipi smallint,
	cevirisi text not null
  );
--@END


--@FUNCTION
create function web.ceviri_get(a_lang char(2), p_tanim text) returns text
language 'sql'
as $$
	select cevirisi from web.ceviri where lang=a_lang and tanim=p_tanim;
$$
--@END

