--@DEPENDS:.base

--@TABLE
create table sistem.klasor(
	id bigserial primary key,
	isim text,
	icinde references sistem.klasor(id),
	alan int references sistem.alan(id),
	yazan int references sistem.uye(id),
	okuyan int references sistem.uye(id)
  );
--@END


--@FUNCTION
create function sistem.alan_yeni(p_isim text) returns void
language 'sql'
as $$
	insert into sistem.alan (isim) 
		values (p_isim);
$$
--@END

